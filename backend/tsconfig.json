{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "allowImportingTsExtensions": true,
  "verbatimModuleSyntax": true,
  "noEmit": true,
  "skipLibCheck": true,
  "strict": true,
  "noFallthroughCasesInSwitch": true,
  "forceConsistentCasingInFileNames": true
}